<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                                http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cn.ekgc.itrip</groupId>
	<artifactId>itrip-parent</artifactId>
	<version>3.0.0</version>
	<packaging>pom</packaging>

	<!-- 配置Spring Boot Parent作为项目的父级依赖关系 [BEGIN] -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.1.10.RELEASE</version>
	</parent>
	<!-- 配置Spring Boot作为项目的父级依赖关系 [END] -->

	<!-- 配置所有子模块所需要的共同依赖关系 [BEGIN] -->
	<dependencies>
		<!-- 配置Spring Boot Web的依赖关系 [BEGIN] -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<!-- 配置Spring Boot Web的依赖关系 [END] -->

		<!-- 配置Spring Boot项目的热部署插件spring-boot-devtools [BEGIN] -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
		</dependency>
		<!-- 配置Spring Boot项目的热部署插件spring-boot-devtools [END] -->
	</dependencies>
	<!-- 配置所有子模块所需要的共同依赖关系 [END] -->

	<dependencyManagement>
		<dependencies>
			<!-- 引入Spring Cloud相关的依赖关系 [BEGIN] -->
			<dependency>
				<groupId>org.springframework.cloud</groupId>
				<artifactId>spring-cloud-dependencies</artifactId>
				<version>Greenwich.SR4</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<!-- 引入Spring Cloud相关的依赖关系 [BEGIN] -->
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<!-- 配置Spring Boot的Maven的打包插件 [BEGIN] -->
				<plugin>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-maven-plugin</artifactId>
					<executions>
						<execution>
							<goals>
								<goal>repackage</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<!-- 配置Spring Boot的Maven的打包插件 [END] -->
			</plugins>
		</pluginManagement>
	</build>
</project>